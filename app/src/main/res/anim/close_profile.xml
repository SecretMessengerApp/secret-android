<set xmlns:android="http://schemas.android.com/apk/res/android" >
    <alpha
           android:duration="@integer/close_profile__animation_duration"
           android:interpolator="@anim/ease_in_interpolator"
           android:startOffset="@integer/close_profile__delay"
           android:fromAlpha="1.0"
           android:toAlpha="0" />
    <scale
            android:duration="@integer/close_profile__animation_duration"
            android:interpolator="@anim/ease_in_interpolator"
            android:startOffset="@integer/close_profile__delay"
            android:fromXScale="100%"
            android:fromYScale="100%"
            android:toXScale="50%"
            android:toYScale="50%"
            android:pivotX="50%"
            android:pivotY="50%"
            />

</set>
