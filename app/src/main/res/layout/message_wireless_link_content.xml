<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/invite_button_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:w_font="@string/wire__typeface__light"
        android:textSize="@dimen/wire__text_size__small"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:layout_marginTop="@dimen/wire__padding__small"
        android:layout_marginBottom="@dimen/wire__padding__regular"
        android:text="@string/invite_button_description"
    />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/invite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:w_font="@string/wire__typeface__medium"
        android:textSize="@dimen/wire__text_size__regular_small"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:text="@string/invite_people"
        android:background="@drawable/invite_button_background"
    />
    <!--TODO Should the button background have a different colour in dark mode? -->

</merge>
