<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <com.waz.zclient.pages.main.profile.views.GuidedEditText
            android:id="@+id/get__sign_in__name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_reg__input_height"
            android:layout_marginTop="@dimen/wire__padding__small"
            android:background="@drawable/shape_edit_corner" />

    <com.waz.zclient.pages.main.profile.views.GuidedEditText
            android:id="@+id/get__sign_in__email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_reg__input_height"
            android:layout_marginTop="@dimen/wire__padding__small"
            android:background="@drawable/shape_edit_corner" />

    <FrameLayout
            android:id="@+id/password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wire__padding__small">

        <com.waz.zclient.pages.main.profile.views.GuidedEditText
                android:id="@+id/get__sign_in__password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_reg__input_height"
                android:background="@drawable/shape_edit_corner" />

        <com.waz.zclient.newreg.views.PhoneConfirmationButton
                android:id="@+id/pcb__signin__logon"
                android:layout_width="@dimen/new_reg__input_height"
                android:layout_height="@dimen/nearby__row__padding_top"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="?attr/SecretPrimaryTextColor"
                android:textSize="@dimen/wire__text_size__regular"
                app:w_font="@string/wire__typeface__light" />
    </FrameLayout>

    <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/terms_of_service_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:gravity="center_vertical|start"
            android:layout_gravity="start"
            android:text="@string/welcome__terms_of_service"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__regular"/>

</LinearLayout>
