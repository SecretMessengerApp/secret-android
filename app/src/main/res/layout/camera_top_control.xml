<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__camera__top_control__flash_setting"
        android:layout_width="@dimen/touch_target_buttons"
        android:layout_height="@dimen/touch_target_buttons"
        android:layout_gravity="center_vertical|left"
        android:gravity="center"
        android:text="@string/glyph__flash_off"
        android:textSize="@dimen/camera__control__button_text_size"
        android:layout_marginLeft="@dimen/camera__control__button_margin_left"
        android:clickable="true"
        android:textColor="@color/camera__control"
        />


    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__camera__top_control__change_camera"
        android:layout_width="@dimen/touch_target_buttons"
        android:layout_height="@dimen/touch_target_buttons"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:text="@string/glyph__flip"
        android:textSize="@dimen/camera__control__button_text_size"
        android:layout_marginRight="@dimen/camera__control__button_margin_right"
        android:clickable="true"
        android:textColor="@drawable/selector__camera__control__button"
        />
</merge>
