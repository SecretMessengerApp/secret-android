<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.waz.zclient.common.views.ChatHeadViewNew
        android:id="@+id/call_chathead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="@dimen/wire__padding__12"
        android:paddingBottom="@dimen/wire__padding__12"
        android:layout_marginStart="@dimen/calling_profile_margin_side"
        android:layout_marginEnd="@dimen/calling_profile_margin_side"
        app:show_border="false"
        app:allow_icon="false"
        app:is_round="true"
        app:isSelectable="false"
        app:show_waiting="false"
        app:gray_on_unconnected="false"
        app:initials_font_size="@dimen/participant_initials_text_size"
        android:visibility="gone"
        />

    <com.waz.zclient.calling.views.CallParticipantsView
        android:id="@+id/call_participants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|start"
        android:visibility="gone"
        app:isScrollable="false"
        />
</merge>

