<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__availability__text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:drawablePadding="@dimen/wire__padding__6"
        android:textSize="@dimen/wire__text_size__smaller"
        style="?userFooterLabel"
        app:w_font="@string/wire__typeface__medium"
    />

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__setstatus__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/wire__padding__8"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/glyph__linedown"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:textSize="@dimen/wire__text_size__tiny"
        android:visibility="gone"
        style="?attr/smallIconButton"
    />

</merge>
