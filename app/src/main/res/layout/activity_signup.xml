<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <!--
        the container for signup/in screens
     -->
    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!--
        progress overlay
     -->
    <com.waz.zclient.views.LoadingIndicatorView
        android:id="@+id/liv__progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/close_button"
        android:layout_width="@dimen/app_entry_close_button_size"
        android:layout_height="@dimen/app_entry_close_button_size"
        android:text="@string/glyph__close"
        android:gravity="center"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:textSize="@dimen/wire__text_size__regular"
        app:w_font="@string/wire__typeface__light"
        android:layout_marginEnd="@dimen/wire__padding__small"
        android:layout_marginTop="@dimen/wire__padding__small"
        android:layout_gravity="top|end"
        android:visibility="gone"/>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:textSize="@dimen/wire__text_size__regular_small"
        app:w_font="@string/wire__typeface__regular"
        android:layout_marginEnd="@dimen/wire__padding__regular"
        android:layout_marginTop="@dimen/wire__padding__regular"
        android:layout_gravity="top|end"
        android:visibility="gone"/>

</FrameLayout>
