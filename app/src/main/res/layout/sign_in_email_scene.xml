<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.waz.zclient.pages.main.profile.views.GuidedEditText
            android:id="@+id/get__sign_in__email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_reg__input_height"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/wire__text_size__emoji"
            android:background="@drawable/shape_edit_corner" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wire__text_size__regular">

        <com.waz.zclient.pages.main.profile.views.GuidedEditText
                android:id="@+id/get__sign_in__password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_reg__input_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_edit_corner">

        </com.waz.zclient.pages.main.profile.views.GuidedEditText>

        <com.waz.zclient.newreg.views.PhoneConfirmationButton
                android:id="@+id/pcb__signin__logon"
                android:layout_width="@dimen/new_reg__input_height"
                android:layout_height="@dimen/options_menu_item__padding__big"
                android:layout_gravity="end"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="?attr/SecretPrimaryTextColor"
                android:textSize="@dimen/wire__text_size__regular"
                app:w_font="@string/wire__typeface__light" />

    </FrameLayout>

</LinearLayout>
