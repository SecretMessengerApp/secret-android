<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

    <com.waz.zclient.common.views.BackgroundImageView
        android:id="@+id/bl__background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl_fragment_main_root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl__overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <com.waz.zclient.views.menus.ConfirmationMenu
        android:id="@+id/cm__confirm_action_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        />

    <FrameLayout
        android:id="@+id/fl_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</FrameLayout>
