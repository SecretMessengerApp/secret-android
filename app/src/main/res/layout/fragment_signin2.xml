<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="false"
              android:background="?attr/SecretBackgroundColor"
              android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            style="?conversationToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:focusable="false"
            app:contentInsetStartWithNavigation="0dp"
           >

        <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/tvNext"
                style="?conversationToolbar"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/wire__padding__8"
                android:paddingStart="@dimen/wire__padding__8"
                android:background="@null"
                android:focusable="false"
                android:text="@string/next_button"
                android:textColor="@color/sign_in2_text_color"
                android:gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <com.jsy.common.views.NoScrollViewPager
            android:id="@+id/noScrollViewPager"
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="match_parent">

    </com.jsy.common.views.NoScrollViewPager>


</LinearLayout>
