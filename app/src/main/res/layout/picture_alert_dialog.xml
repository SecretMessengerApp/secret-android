<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/dp130"
    android:minHeight="@dimen/dp130"
    android:layout_gravity="center"
    android:background="@drawable/dialog_custom_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <com.jsy.common.dialog.PictureSpinView
        android:id="@+id/picture_dialog_icon"
       android:layout_width="@dimen/di_40"
        android:layout_height="@dimen/di_40" />

    <TextView
        android:layout_marginTop="@dimen/di_10"
        android:id="@+id/picture_dialog_text"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:maxLines="4"
        android:layout_height="wrap_content" />

</LinearLayout>
