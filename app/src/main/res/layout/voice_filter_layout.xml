<com.waz.zclient.pages.extendedcursor.voicefilter.VoiceFilterLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="match_parent"
                                                                    android:background="@color/graphite"
    >

    <com.waz.zclient.pages.extendedcursor.voicefilter.VoiceFilterContent
        android:id="@+id/vfc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/voice_filter_toolbar_height"
        android:inAnimation="@anim/ext_cursor_content_control_in"
        android:outAnimation="@anim/ext_cursor_content_control_out"
        />


    <com.waz.zclient.pages.extendedcursor.voicefilter.VoiceFilterToolbar
        android:id="@+id/vft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/voice_filter_toolbar_height"
        android:layout_gravity="bottom"
        android:inAnimation="@anim/ext_cursor_bottom_control_in"
        android:outAnimation="@anim/ext_cursor_bottom_control_out"
        />

</com.waz.zclient.pages.extendedcursor.voicefilter.VoiceFilterLayout>
