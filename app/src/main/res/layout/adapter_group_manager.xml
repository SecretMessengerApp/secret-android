<com.mcxtzhang.swipemenulib.SwipeMenuLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_swipe"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="56dp">

    <RelativeLayout
            android:id="@+id/admin_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector__transparent_button"
            android:orientation="vertical">
        <com.waz.zclient.ui.text.TypefaceTextView
                android:id="@+id/tv_admin_name"
                style="?conversationToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/SecretPrimaryTextColor"
                android:textSize="16sp"/>

        <ImageView
            android:id="@+id/icon_arrow"
            android:layout_width="@dimen/content__footer__height"
            android:layout_height="@dimen/collections__web_preview_image_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/left_to_right_arrow"
            android:visibility="gone"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:background="?attr/SecretPrimaryDividerColor"/>
    </RelativeLayout>

    <com.waz.zclient.ui.text.TypefaceTextView
            android:background="@color/accent_red"
            android:id="@+id/tvDeleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:ellipsize="end"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="@string/conversation__action__delete"
            android:textColor="@color/white"
            android:textSize="@dimen/wire__text_size__regular"
            app:w_font="@string/wire__typeface__light"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
