<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/wire__padding__8"
        android:paddingEnd="@dimen/wire__padding__8">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t1"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__huge"
                    android:background="@drawable/rounded_corner_background_white_small"
                    android:clickable="false"
                    android:focusable="false"
                    app:w_font="@string/wire__typeface__regular"
                    android:textIsSelectable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t2"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__huge"
                    android:background="@drawable/rounded_corner_background_white_small"
                    android:clickable="false"
                    android:focusable="false"
                    app:w_font="@string/wire__typeface__regular"
                    android:textIsSelectable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t3"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__huge"
                    android:background="@drawable/rounded_corner_background_white_small"
                    android:clickable="false"
                    android:focusable="false"
                    app:w_font="@string/wire__typeface__regular"
                    android:textIsSelectable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t4"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__huge"
                    android:background="@drawable/rounded_corner_background_white_small"
                    android:clickable="false"
                    android:focusable="false"
                    app:w_font="@string/wire__typeface__regular"
                    android:textIsSelectable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t5"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__huge"
                    android:background="@drawable/rounded_corner_background_white_small"
                    android:clickable="false"
                    android:focusable="false"
                    app:w_font="@string/wire__typeface__regular"
                    android:textIsSelectable="false"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.waz.zclient.ui.text.TypefaceTextView
                    android:id="@+id/t6"
                    android:layout_width="@dimen/verification_code_input_cell_width"
                    android:layout_height="@dimen/verification_code_input_cell_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/wire__text_size__huge"
                    android:background="@drawable/rounded_corner_background_white_small"
                    android:clickable="false"
                    android:focusable="false"
                    app:w_font="@string/wire__typeface__regular"
                    android:textIsSelectable="false"/>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/wire__divider__height"
            android:layout_height="@dimen/wire__divider__height"
            android:visibility="invisible">

            <com.waz.zclient.ui.cursor.CursorEditText
                android:id="@+id/code_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/teams_input_box_height"
                android:paddingStart="@dimen/wire__padding__regular"
                android:paddingEnd="@dimen/wire__padding__regular"
                android:background="@null"
                android:textSize="@dimen/wire__text_size__medium"
                android:inputType="phone"
                android:maxLength="6"
                android:maxLines="1"
                android:visibility="visible"
                android:alpha="@dimen/framework__zero__alpha"
                />

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_entry_input_box_aux_height">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:layout_width="@dimen/progress_spinner_size"
            android:layout_height="@dimen/progress_spinner_size"
            android:layout_gravity="center_horizontal|top"/>

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/empty_search_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wire__padding__8"
            android:textSize="@dimen/wire__text_size__small"
            android:textColor="@color/SecretRed"
            android:gravity="center_horizontal|top"
            app:w_font="@string/wire__typeface__medium"/>

    </FrameLayout>

</LinearLayout>
