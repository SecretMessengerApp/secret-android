<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/mute_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="@dimen/wire__padding__32"
        android:focusable="true"/>

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/video_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingBottom="@dimen/wire__padding__32"
        android:focusable="true"/>

    <!-- speaker and flip buttons use the same position -->
    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/speaker_flip_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="@dimen/wire__padding__32"
        android:focusable="true"/>

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/reject_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:iconDimension="@dimen/hangup_call_icon_size"
        android:focusable="true"
        android:visibility="gone"/>

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/end_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:iconDimension="@dimen/hangup_call_icon_size"
        android:focusable="true"
        android:visibility="invisible"/>

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/accept_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"/>
</merge>

