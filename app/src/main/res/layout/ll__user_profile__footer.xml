<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:baselineAligned="false"
    >

    <LinearLayout
        android:id="@+id/ll__participants__left__action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1"
        >

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/gtv__participants__left__action"
            android:layout_width="@dimen/wire__icon_button__diameter"
            android:layout_height="@dimen/wire__icon_button__diameter"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/wire__padding__regular"
            style="?attr/smallIconButton"
            />


        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__participants__left_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wire__padding__8"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/touch_target_buttons"
            android:gravity="start|center_vertical"
            app:w_font="@string/wire__typeface__medium"
            android:textColor="?attr/SecretPrimaryTextColor"
            android:textSize="@dimen/wire__text_size__smaller"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll__participants__right__action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__participants__right_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/touch_target_buttons"
            android:gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/wire__padding__small"
            app:w_font="@string/wire__typeface__medium"
            android:textColor="?attr/SecretPrimaryTextColor"
            android:textSize="@dimen/wire__text_size__smaller"
            />

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/gtv__participants__right__action"
            android:layout_width="@dimen/wire__icon_button__diameter"
            android:layout_height="@dimen/wire__icon_button__diameter"
            android:layout_marginEnd="@dimen/wire__padding__regular"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            style="?attr/smallIconButton"
            />

    </LinearLayout>

</LinearLayout>
