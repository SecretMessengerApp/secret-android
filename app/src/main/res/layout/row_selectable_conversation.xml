<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_row_height"
              android:paddingTop="@dimen/list_tile_top_padding"
              android:paddingBottom="@dimen/list_tile_bottom_padding"
              android:paddingLeft="@dimen/wire__padding__16"
              android:paddingRight="@dimen/wire__padding__16">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/rb__conversation_selected"
        android:layout_width="@dimen/share_extension__row__checkbox_size"
        android:layout_height="@dimen/share_extension__row__checkbox_size"
        android:layout_gravity="center_vertical"
        android:button="@drawable/checkbox"
        tools:targetApi="lollipop"/>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__conversation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/wire__padding__16"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/list_font_size"/>

</merge>
