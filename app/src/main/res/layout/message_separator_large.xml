<com.waz.zclient.messages.SeparatorViewLarge xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/wire__margin__huge"
                                             android:layout_marginBottom="@dimen/message_stream_separator_bottom_margin_large"
    >

    <com.waz.zclient.messages.UnreadDot
        android:id="@+id/unread_dot"
        android:layout_width="@dimen/content__padding_left"
        android:layout_height="match_parent"
        />


    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/separator__time"
        style="?messageStreamTimestamp"
        android:layout_marginStart="@dimen/message_stream_separator_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        app:w_font="@string/wire__typeface__bold"
        />


</com.waz.zclient.messages.SeparatorViewLarge>
