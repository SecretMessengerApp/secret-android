<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
    >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/framework__general__left_padding"
        android:layout_gravity="right|center_vertical"
        android:gravity="right|center_vertical"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__confirmation__cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/framework_confirmation_menu_button_height"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__light"
            android:textColor="?attr/SecretPrimaryTextColor"
            />

    </FrameLayout>

    <View
        android:layout_width="@dimen/framework_confirmation_menu_button_space_between"
        android:layout_height="1dp"
        tools:ignore="com.waz.LayoutXmlValue"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/framework__general__right_padding"
        android:layout_gravity="left|center_vertical"
        android:gravity="left|center_vertical"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__confirmation__confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/framework_confirmation_menu_button_height"
            android:layout_gravity="left"
            android:gravity="center"
            android:textSize="@dimen/wire__text_size__small"
            android:textColor="?attr/SecretPrimaryTextColor"
            app:w_font="@string/wire__typeface__light"
            />

    </FrameLayout>
</LinearLayout>
