<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collection_video_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.waz.zclient.pages.main.conversation.views.AspectRatioImageView
        android:id="@+id/aspectRatioImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtvAction"
        android:layout_width="@dimen/message_content_padding_48"
        android:layout_height="@dimen/message_content_padding_48"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/glyph__play"
        android:textColor="?attr/SecretSubTextColor"
        android:textSize="@dimen/wire__text_size__medium" />

    <com.waz.zclient.messages.parts.assets.AssetActionButton
        android:id="@+id/action_button"
        android:layout_width="@dimen/content__video_message__button__size"
        android:layout_height="@dimen/content__video_message__button__size"
        android:layout_gravity="center"
        android:textColor="?attr/SecretSubTextColor"
        android:textSize="@dimen/content__video_message__glyph_size"
        android:visibility="gone" />

</FrameLayout>
