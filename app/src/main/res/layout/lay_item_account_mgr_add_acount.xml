<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@drawable/selector__transparent_button_3"
    android:padding="15dp">

    <ImageView
        android:id="@+id/ivAddAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ico_account_add_account" />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/tvAddAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivAddAccount"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/preferences_profile_add_account"
        android:textColor="@color/secret_add_account"
        android:textSize="@dimen/wire__text_size__regular"
        app:w_font="@string/wire__typeface__light" />

</RelativeLayout>

