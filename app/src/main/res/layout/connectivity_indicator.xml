<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_gravity="top"
             android:layout_width="match_parent"
             android:layout_height="@dimen/network_indicator__expanded_height"
             android:paddingBottom="@dimen/network_indicator__padding_bottom"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/network_indicator__visible_height"
        android:src="@color/network_indicator__header__color"
        android:layout_gravity="bottom"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/no_internet_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/network_indicator__visible_height"
        android:gravity="center"
        android:text="@string/system_status__no_internet"
        android:textColor="@color/network_indicator__font__color"
        app:w_font="@string/network_indicator__font"
        android:textSize="@dimen/network_indicator__font__size"
        />

</FrameLayout>
