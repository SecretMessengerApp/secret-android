<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/wire__padding__regular"
    android:paddingLeft="@dimen/wire__padding__regular"
    android:orientation="vertical"
    android:gravity="center"
    >

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__file_action_dialog__open__no_app_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wire__padding__12"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/wire__text_size__regular"
        android:text="@string/content__file__action__open__no_app_found"
        app:w_font="@string/wire__typeface__light"
        style="?attr/wirePrimaryTextColor"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wire__divider__height"
        android:layout_marginTop="@dimen/wire__padding__20"
        style="?wireDivider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_row_height"
        android:orientation="horizontal"
        android:gravity="center">


    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__file_action_dialog__open"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minWidth="@dimen/wire__dialog__min_width"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/wire__text_size__small"
        android:text="@string/content__file__action__open"
        app:w_font="@string/wire__typeface__light"
        style="?attr/wirePrimaryTextColor"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__file_action_dialog__save"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minWidth="@dimen/wire__dialog__min_width"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/wire__text_size__small"
        android:text="@string/content__file__action__save"
        app:w_font="@string/wire__typeface__light"
        style="?attr/wirePrimaryTextColor"
        />

    </LinearLayout>

</LinearLayout>
