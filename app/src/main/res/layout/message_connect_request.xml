<com.waz.zclient.messages.parts.ConnectRequestPartView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@null"
              android:gravity="center_horizontal"
              android:baselineAligned="false"
              android:paddingLeft="@dimen/framework__general__left_padding"
              android:paddingRight="@dimen/framework__general__right_padding"
    >

    <com.waz.zclient.common.views.UserDetailsView
        android:id="@+id/udv__row_conversation__connect_request__user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wire__padding__big"
        />

    <com.waz.zclient.common.views.ChatHeadViewNew
        android:id="@+id/cv__row_conversation__connect_request__chat_head"
        android:layout_width="295dp"
        android:layout_height="295dp"
        app:show_border="false"
        android:layout_marginBottom="@dimen/wire__padding__big"
        android:layout_marginTop="@dimen/wire__padding__big"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__row_conversation__connect_request__label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wire__padding__big"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:textSize="@dimen/wire__text_size__small"
        app:w_font="@string/wire__typeface__light"
        />

</com.waz.zclient.messages.parts.ConnectRequestPartView>
