<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_frag_parent"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipChildren="false"
        >

        <FrameLayout
                android:layout_above="@+id/lav__conversation_list_actions"
                android:id="@+id/fl__conversation_list_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <FrameLayout
                android:layout_above="@+id/lav__conversation_list_actions"
                android:id="@+id/fl__conversation_list__profile_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <!-- Conversation list loading indicator -->
        <com.waz.zclient.views.LoadingIndicatorView
                android:layout_above="@+id/lav__conversation_list_actions"
                android:id="@+id/lbv__conversation_list__loading_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <com.waz.zclient.views.LoadingIndicatorView
                android:layout_above="@+id/lav__conversation_list_actions"
                android:id="@+id/liv__conversations__loading_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <FrameLayout
                android:layout_above="@+id/lav__conversation_list_actions"
                android:id="@+id/fl__conversation_list__settings_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.waz.zclient.views.menus.ConfirmationMenu
                android:layout_above="@+id/lav__conversation_list_actions"
                android:id="@+id/cm__confirm_action_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"/>

        <com.waz.zclient.pages.main.conversationlist.views.ListActionsView
                android:layout_alignParentBottom="true"
                android:id="@+id/lav__conversation_list_actions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/conversation_list__action_view__height"
                android:clipChildren="false"
            />

    </RelativeLayout>

    <FrameLayout
            android:id="@+id/fl_draw_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|left"/>

</androidx.drawerlayout.widget.DrawerLayout>
