<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/profile_user_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@color/about__background"
        />

    <RelativeLayout
        android:layout_height="@dimen/preference_button_height"
        android:layout_width="match_parent"
        >

        <com.waz.zclient.common.views.GlyphButton
            android:id="@+id/profile_user_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/glyph__camera"
            android:color="@color/white"
            android:textSize="@dimen/wire__text_size__big"
            />

    </RelativeLayout>

</merge>
