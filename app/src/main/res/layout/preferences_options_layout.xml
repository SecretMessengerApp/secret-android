<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <include
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wire__divider__height__thin"
                    layout="@layout/layout_line_c9ced2"/>

            <com.waz.zclient.preferences.views.SwitchPreference
                    android:id="@+id/preferences_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:titleBackground="@color/white"
                    app:title="@string/pref_options_contacts_title"
                    app:titleSize="16sp"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:desc="@string/pref_options_contacts_summary"
                    app:descColor="@color/color_999"
                    app:descSize="11sp"
                    app:showCenterLine="true"
                    app:showBottomLine="true"
            />

            <com.waz.zclient.preferences.views.SectionHeadText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/pref_options_calls_category_title"
                    app:titleColor="?attr/SecretSubTextColor"
                    app:titleSize="11sp"
                    app:showBottomLine="true"
            />


            <com.waz.zclient.preferences.views.SwitchPreference
                    android:id="@+id/preferences_vbr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:titleBackground="@color/white"
                    app:title="@string/pref_options_vbr_title"
                    app:titleSize="16sp"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:desc="@string/pref_options_vbr_summary"
                    app:showCenterLine="true"
                    app:showBottomLine="true"
            />

            <com.waz.zclient.preferences.views.SectionHeadText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/pref_options_alerts_category_title"
                    app:titleColor="?attr/SecretSubTextColor"
                    app:titleSize="11sp"
                    app:showBottomLine="true"
            />

            <com.waz.zclient.preferences.views.TextButton
                    android:id="@+id/preferences_sounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_button_height"
                    android:background="@drawable/selector__transparent_button"

                    app:iconEndImg="@drawable/left_to_right_arrow"
                    app:title="@string/pref_options_sounds_title"
                    app:textOrientation="horizontal"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:titleSize="16sp"
                    app:subTitleColor="?attr/SecretSubTextColor"
                    app:subTitleSize="16sp"
                    app:showBottomLine="true"
                    app:bottomLineStyle="alignParentStart"

            />


            <com.waz.zclient.preferences.views.SwitchPreference
                    android:id="@+id/preferences_vibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:titleBackground="@color/white"
                    app:title="@string/pref_options_vibration_title"
                    app:titleSize="16sp"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:showCenterLine="true"
                    app:showBottomLine="true"
            />

            <com.waz.zclient.preferences.views.SectionHeadText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/pref_options_ringtones_category_title"
                    app:titleColor="?attr/SecretSubTextColor"
                    app:titleSize="11sp"
                    app:showBottomLine="true"
            />


            <com.waz.zclient.preferences.views.TextButton
                    android:id="@+id/preference_sounds_ringtone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_button_height"

                    android:background="@drawable/selector__transparent_button_3"
                    app:iconEndImg="@drawable/left_to_right_arrow"
                    app:title="@string/pref_options_ringtones_ringtone_title"
                    app:textOrientation="horizontal"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:titleSize="16sp"
                    app:subTitleColor="?attr/SecretSubTextColor"
                    app:subTitleSize="16sp"
                    app:showBottomLine="true"
                    app:bottomLineStyle="alignTitleStart"
            />
            <com.waz.zclient.preferences.views.TextButton
                    android:id="@+id/preference_sounds_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_button_height"

                    android:background="@drawable/selector__transparent_button_3"
                    app:iconEndImg="@drawable/left_to_right_arrow"
                    app:title="@string/pref_options_ringtones_text_title"
                    app:textOrientation="horizontal"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:titleSize="16sp"
                    app:subTitleColor="?attr/SecretSubTextColor"
                    app:subTitleSize="16sp"
                    app:showBottomLine="true"
                    app:bottomLineStyle="alignTitleStart"
            />
            <com.waz.zclient.preferences.views.TextButton
                    android:id="@+id/preference_sounds_ping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/preference_button_height"

                    android:background="@drawable/selector__transparent_button_3"
                    app:iconEndImg="@drawable/left_to_right_arrow"
                    app:title="@string/pref_options_ringtones_ping_title"
                    app:textOrientation="horizontal"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:titleSize="16sp"
                    app:subTitleColor="?attr/SecretSubTextColor"
                    app:subTitleSize="16sp"
                    app:showBottomLine="true"
                    app:bottomLineStyle="alignParentStart"
            />

            <com.waz.zclient.preferences.views.SwitchPreference
                    android:id="@+id/preferences_send_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    app:titleBackground="@color/white"
                    app:title="@string/pref_options_cursor_send_button_title"
                    app:titleSize="16sp"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:desc="@string/pref_options_cursor_send_button_summary"
                    app:showCenterLine="true"
                    app:showBottomLine="true"
            />

            <com.waz.zclient.preferences.views.SectionHeadText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/pref_options_media_category_title"
                    app:titleColor="?attr/SecretSubTextColor"
                    app:titleSize="11sp"
                    app:showBottomLine="true"
            />

            <com.waz.zclient.preferences.views.SwitchPreference
                    android:id="@+id/preferences_options_image_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:titleBackground="@color/white"
                    app:title="@string/pref_options_image_download_title"
                    app:titleSize="16sp"
                    app:titleColor="?attr/SecretPrimaryTextColor"
                    app:desc="@string/pref_options_cursor_send_button_summary"
                    app:showCenterLine="true"
                    app:showBottomLine="true"
            />

        </LinearLayout>

    </ScrollView>

</merge>
