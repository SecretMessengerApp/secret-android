<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.waz.zclient.messages.parts.footer.LikeButton
            android:id="@+id/like__button"
            android:layout_width="@dimen/message_content_padding_24"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical" />

    <com.waz.zclient.messages.parts.footer.LikeDetailsView
            android:id="@+id/like_details"
            android:layout_marginEnd="@dimen/message_content_padding_72"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/like__button"
            android:layout_marginStart="@dimen/message_content_padding_24"
            />

    <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/timestamp_and_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/chathead__margin"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textColor="@color/text__secondary_light"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__medium" />

</merge>

