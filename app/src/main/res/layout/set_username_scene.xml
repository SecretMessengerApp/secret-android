<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/teams_set_username_title"
        app:w_font="@string/wire__typeface__light"
        android:textSize="@dimen/wire__text_size__even_huger"
        android:textColor="?attr/SecretPrimaryTextColor"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/teams_set_username_subtitle"
        app:w_font="@string/wire__typeface__regular"
        android:textSize="@dimen/wire__text_size__regular"
        android:textColor="@color/teams_description_text"
        android:layout_marginTop="@dimen/wire__padding__8"
        />

    <com.waz.zclient.common.views.InputBox
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/teams_input_margin_top"
        app:hint="@string/teams_set_username_hint"/>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/empty_string"
        android:textSize="@dimen/wire__text_size__smaller"
        app:w_font="@string/wire__typeface__medium"
        android:textColor="@drawable/app_entry_text_button"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>
