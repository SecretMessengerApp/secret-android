<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="53dp">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/report_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/di_40"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingStart="@dimen/di_15"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:textSize="@dimen/sp_16"
        app:w_font="@string/wire__typeface__regular" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/di_15"
        android:src="@drawable/left_to_right_arrow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/SecretPrimaryDividerColor"
        android:layout_marginStart="@dimen/di_15" />

</RelativeLayout>
