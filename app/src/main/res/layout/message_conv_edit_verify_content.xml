<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.RelativeLayout">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/conv_msg_edit_verify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_15"
        android:textColor="?attr/SecretPrimaryTextColor"
        android:textSize="12sp"
        app:w_font="@string/wire__typeface__regular" />

    <LinearLayout
        android:id="@+id/conv_msg_edit_verify_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conv_msg_edit_verify_text"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/conv_msg_edit_agree_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="@dimen/padding_18"
            android:paddingRight="@dimen/padding_18"
            android:paddingBottom="@dimen/padding_15"
            android:text="@string/secret_agree"
            android:textColor="?attr/MessageNotifyOperateColor"
            android:textSize="12sp"
            app:w_font="@string/wire__typeface__regular" />

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/conv_msg_edit_reject_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="@dimen/padding_18"
            android:paddingRight="@dimen/padding_18"
            android:paddingBottom="@dimen/padding_15"
            android:text="@string/secret_refuse"
            android:textColor="?attr/MessageNotifyOperateColor"
            android:textSize="12sp"
            app:w_font="@string/wire__typeface__regular" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/conv_msg_edit_revoke_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conv_msg_edit_verify_text"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/conv_msg_edit_empty_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="@dimen/padding_18"
            android:paddingRight="@dimen/padding_18"
            android:paddingBottom="@dimen/padding_15"
            android:text="@string/conversation__message_action__delete__dialog__cancel"
            android:textColor="?attr/MessageNotifyOperateColor"
            android:textSize="12sp"
            android:visibility="invisible"
            app:w_font="@string/wire__typeface__regular" />

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/conv_msg_edit_revoke_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="@dimen/padding_18"
            android:paddingRight="@dimen/padding_18"
            android:paddingBottom="@dimen/padding_15"
            android:text="@string/conversation__message_action__delete__dialog__cancel"
            android:textColor="?attr/MessageNotifyOperateColor"
            android:textSize="12sp"
            app:w_font="@string/wire__typeface__regular" />
    </LinearLayout>

</merge>
