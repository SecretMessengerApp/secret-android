<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/SecretSecondaryBackgroundColor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/ToolbarBackgroundColor"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity='center'
            android:text="@string/new_group_header"
            android:textColor="?attr/SecretPrimaryTextColor"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__medium"/>

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/confirmation_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/wire__padding__8"
            android:paddingEnd="@dimen/wire__padding__8"
            android:gravity="center"
            android:layout_gravity='end'
            android:text="@string/next_button"
            android:textColor="@drawable/app_entry_text_button"
            android:textSize="@dimen/wire__text_size__small"
            app:w_font="@string/wire__typeface__medium"
            android:layout_marginEnd="@dimen/wire__padding__regular"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>

</RelativeLayout>
