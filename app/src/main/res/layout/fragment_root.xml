<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <com.waz.zclient.pages.main.conversationpager.SlidingPaneLayout
                                                  android:id="@+id/spl__root"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
        >
        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/fl__root__left_view"
            android:layout_width="@dimen/framework__sidebar_width"
            android:layout_height="match_parent"
            />
        <!-- The navigation drawer -->
        <FrameLayout
            android:id="@+id/fl__root_backgroundcolor_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            >

            <FrameLayout
                android:id="@+id/fl__root__right_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>
    </com.waz.zclient.pages.main.conversationpager.SlidingPaneLayout>

    <FrameLayout
        android:id="@+id/fl__root__participant_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl__root__giphy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl__root__camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl__root__sketch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</FrameLayout>
