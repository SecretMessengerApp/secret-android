<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <stroke android:color="@color/text__primary_light" android:width="@dimen/wire__stroke" />
            <solid android:color="@color/background_light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <stroke android:color="@color/text__secondary_light__40" android:width="@dimen/wire__stroke" />
            <solid android:color="@color/background_light" />
        </shape>
    </item>
</selector>
