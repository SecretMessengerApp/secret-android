<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">

        <shape
            android:shape="ring"
            android:innerRadius="10dp"
            android:thickness="2dp"
            android:useLevel="false">

            <solid android:color="#FFE5E5E5"/>

            <size
                android:width="24dp"
                android:height="24dp"/>

        </shape>

    </item>

    <item android:state_checked="true">
        <layer-list>
            <item >

                <shape
                    android:shape="oval">

                    <solid android:color="@color/accent_blue"/>

                    <size
                        android:width="24dp"
                        android:height="24dp"/>

                </shape>

            </item>
            <item >

                <shape
                    android:shape="ring"
                    android:innerRadius="10dp"
                    android:thickness="2dp"
                    android:useLevel="false">

                    <solid android:color="#FFFFFF"/>

                    <size
                        android:width="24dp"
                        android:height="24dp"/>

                </shape>

            </item>
            <item>
                <scale android:level="1"
                   android:drawable="@drawable/ic_action_check_light"
                   android:scaleGravity="center"
                   android:scaleHeight="50%"
                   android:scaleWidth="50%" />
            </item>
        </layer-list>
    </item>
</selector>

