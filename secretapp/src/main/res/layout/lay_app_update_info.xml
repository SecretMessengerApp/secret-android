<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:longClickable="true"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_heightPercent="80%h"
        app:layout_widthPercent="80%w">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_app_update_info_top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ico_app_update_info" />

                <ImageView
                    android:id="@+id/ivCloseAppUpdateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:minWidth="14dp"
                    android:minHeight="14dp"
                    android:padding="10dp"
                    android:src="@drawable/ico_app_update_info_close" />

            </com.zhy.android.percent.support.PercentRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_app_update_info_bottom"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:paddingBottom="27dp">

                <TextView
                    android:id="@+id/tvUpdateInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/app_update_info_title"
                    android:textColor="?attr/SecretPrimaryTextColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvUpdateInfoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="27dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/app_update_info_detail"
                    android:textColor="?attr/SecretPrimaryTextColor"
                    android:textSize="@dimen/wire__text_size__small" />

                <TextView
                    android:id="@+id/tvCloseAppUpdateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_app_update_info_close"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/app_update_info_close"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wire__text_size__small" />

            </LinearLayout>
        </LinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
